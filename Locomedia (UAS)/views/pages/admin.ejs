<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>
  <body>
      <div class="title" style="background-color: whitesmoke; display: flex; padding-top: 1%; align-items: center; padding-bottom: 1%; padding-left: 2%;">
        <img src="/image/logo/logo.jpg" alt="" width="50" height="50" class="d-inline-block align-text-center" style="border-radius: 25px;">
        <h1 style="font-size: 25px;"> &nbsp &nbsp Locomedia</h1>

        <a href="/" style="margin-left: 74%; color: black; border: solid black; padding: 8px 12px 8px 12px; text-decoration: none;">Logout</a>
      </div>

      <div class="box-container" style="width: 1200px; height: 700px; margin: auto; margin-top: 2%;">
        <div class="accordion" id="accordionExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Edit Cities
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Page's Link</th>
                        <th scope="col">Picture's Link</th>
                        <th scope="col">City's Name</th>
                        <th scope="col">City's Location</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% cities.forEach((city) => { %>
                      <tr>
                        <td><%= city.link %></td>
                        <td><%= city.imagePath %></td>
                        <td><%= city.name %></td>
                        <td><%= city.location %></td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>

                  <div class="btn-container" style="text-align: center;">
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal2" style="border: solid; margin-right: 20px; background-color: black; color: white; border-radius: 10px; width: 200px; height: auto;">
                      Tambah Data
                    </button>
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal3" style="border: solid; margin-right: 20px; background-color: black; color: white; border-radius: 10px; width: 200px; height: auto;">
                      Update Data
                    </button>
                  </div>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTne">
                Edit Articles
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Page's Link</th>
                        <th scope="col">Picture's Link</th>
                        <th scope="col">Article's Source</th>
                        <th scope="col">Article's Title</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% articles.forEach((article) => { %>
                      <tr>
                        <td><%= article.link %></td>
                        <td style="max-width: 700px; overflow: hidden;"><%= article.imagePath %></td>
                        <td><%= article.sumber %></td>
                        <td><%= article.title %></td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>

                  <div class="btn-container" style="text-align: center;">
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal4" style="border: solid; margin-right: 20px; background-color: black; color: white; border-radius: 10px; width: 200px; height: auto;">
                      Tambah Data
                    </button>
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal5" style="border: solid; margin-right: 20px; background-color: black; color: white; border-radius: 10px; width: 200px; height: auto;">
                      Update Data
                    </button>
                  </div>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Accordion Item #3
              </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <strong>This is the third item's accordion body.</strong> It is hidden by default, until the collapse plugin adds the appropriate classes that we use to style each element. These classes control the overall appearance, as well as the showing and hiding via CSS transitions. You can modify any of this with custom CSS or overriding our default variables. It's also worth noting that just about any HTML can go within the <code>.accordion-body</code>, though the transition does limit overflow.
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <img src="/image/logo/logo.jpg" alt="" width="50" height="50" class="d-inline-block align-text-center" style="border-radius: 25px;">
              <h1 style="font-size: 25px;"> &nbsp &nbsp Locomedia</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form method="POST" action="/admin/cityAdd">
                <h3 class="mx-auto col-11" style="margin-bottom: 5px; margin-top: 5px; font-size: 25px; font-weight: 600; text-align: center;">Edit city</h3>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputEmail1" class="form-label">Page's link</label>
                  <input name="link" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Page's link">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">Picture's link</label>
                  <input name="imagePath" type="text" class="form-control" id="exampleInputPassword1" placeholder="Image's link">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">City's name</label>
                  <input name="name" type="text" class="form-control" id="exampleInputPassword1" placeholder="City's name">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">City's location</label>
                  <input name="location" type="text" class="form-control" id="exampleInputPassword1" placeholder="City's location">
                </div>
                <div class="d-grid col-9 mx-auto" style="justify-content: center; margin-top: 10%;">
                  <button type="submit" class="btn" style="border: solid; background-color: black; color: white; border-radius: 25px; width: 150px; height: 50px;">Add Data</button>
                </div>
              </form>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <img src="/image/logo/logo.jpg" alt="" width="50" height="50" class="d-inline-block align-text-center" style="border-radius: 25px;">
              <h1 style="font-size: 25px;"> &nbsp &nbsp Locomedia</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="height: 400px;">
              <form method="POST" action="/admin/cityUpdate">
                <h3 class="mx-auto col-11" style="margin-bottom: 5px; margin-top: 5px; font-size: 25px; font-weight: 600; text-align: center;">Edit city</h3>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Name</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% cities.forEach((city) => { %>
                    <tr>
                      <td><%= city.name %></td>
                      <td style="text-align: end; display: flex; justify-content: end;">
                        <a href="/admin-update/<%=city.id%>" style="margin-right: 10px;">
                          <button type="button" style="background-color: white; padding: 2px 10px 2px 10px; border-radius: 10px;">Update</button>
                        </a>
                        <a href="/admin-delete/<%=city.id%>" style="margin-right: 10px;">
                          <button type="button" style="background-color: white; padding: 2px 10px 2px 10px; border-radius: 10px;">Delete</button>
                        </a>
                        </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </form>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal4" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <img src="/image/logo/logo.jpg" alt="" width="50" height="50" class="d-inline-block align-text-center" style="border-radius: 25px;">
              <h1 style="font-size: 25px;"> &nbsp &nbsp Locomedia</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form method="POST" action="/admin/articleAdd">
                <h3 class="mx-auto col-11" style="margin-bottom: 5px; margin-top: 5px; font-size: 25px; font-weight: 600; text-align: center;">Edit city</h3>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputEmail1" class="form-label">Page's link</label>
                  <input name="link" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Page's link">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">Picture's link</label>
                  <input name="imagePath" type="text" class="form-control" id="exampleInputPassword1" placeholder="Image's link">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">Article's source</label>
                  <input name="sumber" type="text" class="form-control" id="exampleInputPassword1" placeholder="City's name">
                </div>
                <div class="mx-auto col-11" style="justify-content: center;">
                  <label for="exampleInputPassword1" class="form-label">Article's title</label>
                  <input name="title" type="text" class="form-control" id="exampleInputPassword1" placeholder="City's location">
                </div>
                <div class="d-grid col-9 mx-auto" style="justify-content: center; margin-top: 10%;">
                  <button type="submit" class="btn" style="border: solid; background-color: black; color: white; border-radius: 25px; width: 150px; height: 50px;">Add Data</button>
                </div>
              </form>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal5" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <img src="/image/logo/logo.jpg" alt="" width="50" height="50" class="d-inline-block align-text-center" style="border-radius: 25px;">
              <h1 style="font-size: 25px;"> &nbsp &nbsp Locomedia</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="height: 400px;">
              <form method="POST" action="/admin/articleUpdate">
                <h3 class="mx-auto col-11" style="margin-bottom: 5px; margin-top: 5px; font-size: 25px; font-weight: 600; text-align: center;">Edit article</h3>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Name</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% articles.forEach((article) => { %>
                    <tr>
                      <td><%= article.title %></td>
                      <td style="text-align: end; display: flex; justify-content: end;">
                        <a href="/admin-update-article/<%=article._id%>" style="margin-right: 10px;">
                          <button type="button" style="background-color: white; padding: 2px 10px 2px 10px; border-radius: 10px;">Update</button>
                        </a>
                        <a href="/admin-delete-article/<%=article._id%>" style="margin-right: 10px;">
                          <button type="button" style="background-color: white; padding: 2px 10px 2px 10px; border-radius: 10px;">Delete</button>
                        </a>
                        </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </form>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>