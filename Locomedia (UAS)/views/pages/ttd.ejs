<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <style>
    .card img {
      width: 215px;
      height: 215px;
    }

    h2 {
      font-weight: bold; 
      color: white;
      text-align: center; 
      background-color: rgb(255, 255, 255, 0, 5); 
      backdrop-filter: blur(2px);
    }

    .popular-cities .cards .card img {
      width: 272px;
      height: 272px;
    }

    .popular-cities .cards a:hover h5{
      text-decoration: underline;
    }

    .popular-cities .cards a .card{
      border-color: white;
    }

    .attraction .collum .row #carouselExampleControls .carousel-inner .carousel-item img {
      width: 368px;
      height: 368px;
    }

    .attraction .collum .row #carouselExampleControls2 .carousel-inner .carousel-item img {
      width: 368px;
      height: 368px;
    }
  </style>

  <body>
    <%- include('../layout/navbar.ejs'); %>

    <div class="title" style="width: 90%; margin: auto; padding-top: 3%; padding-bottom: 5%; ">
      <div class="text">
        <h1 style="font-weight: 700;">Things To Do In Indonesia</h1>
      </div>
      <div class="image-box" style="padding-top: 3%;">
        <div class="image-title" style="padding-bottom: 1%;">
          <h4>Popular Things To Do</h4>
        </div>
        <div class="cards" style="display: flex; justify-content: center;">
          <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
            <div class="card">
              <img src="/image/ttd/nature.jpg" alt="">
              <h2 style="margin-top: -40%;">Nature & <br> Wildlife</h2>
            </div>
          </a>
          <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
            <div class="card">
              <img src="/image/ttd/themepark.jpg" alt="">
              <h2 style="margin-top: -30%;">Fun Parks</h2>
            </div>
          </a>
          <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
            <div class="card">
              <img src="/image/ttd/mall.jpg" alt="">
              <h2 style="margin-top: -40%;">Shopping <br> Mall</h2>
            </div>
          </a>
          <a href="famousplaces" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
            <div class="card">
              <img src="/image/ttd/history.jpg" alt="">
              <h2 style="margin-top: -40%;">Historical <br> Tour</h2>
            </div>
          </a>
          <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
            <div class="card">
              <img src="/image/ttd/pantai.jpg" alt="">
              <h2 style="margin-top: -30%;">Beaches</h2>
            </div>
          </a>
        </div>
        <hr style="margin-top: 4.5%; color:darkgray;">
        <div class="popular-cities" style="margin-bottom: 5%;">
          <div class="image-box" style="padding-top: 3%;">
            <div class="image-title" style="padding-bottom: 1%;">
              <h4>Popular Cities In Indonesia</h4>
            </div>
            <div class="cards" style="display: flex; justify-content: center;">
              <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
                <div class="card"">
                  <img src="/image/ttd/cities/jakarta.jpg" alt="">
                  <h5 style="color: black; margin-top: 3%;">Jakarta</h5>
                  <h6 style="color: black; font-weight: 400;">DKI Jakarta, Indonesia</h6>
                </div>
              </a>
              <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
                <div class="card">
                  <img src="/image/ttd/cities/yogyaa.jpg" alt="">
                  <h5 style="color: black; margin-top: 3%;">Yogyakarta</h5>
                  <h6 style="color: black; font-weight: 400;">DI Yogyakarta, Indonesia</h6>
                </div>
              </a>
              <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
                <div class="card">
                  <img src="/image/ttd/cities/ubudd.jpg" alt="">
                  <h5 style="color: black; margin-top: 3%;">Ubud</h5>
                  <h6 style="color: black; font-weight: 400;">Bali, Indonesia</h6>
                </div>
              </a>
              <a href="naw" style="text-decoration: none; padding-right: 0.6%; padding-left: 0.6%;">
                <div class="card">
                  <img src="/image/ttd/cities/bandungg.jpg" alt="">
                  <h5 style="color: black; margin-top: 3%;">Bandung</h5>
                  <h6 style="color: black; font-weight: 400;">Jawa Barat, Indonesia</h6>
                </div>
              </a>
            </div>
        </div>
        <hr style="margin-top: 3.5%; color:darkgray;">
      </div>
    </div>

    <div class="attraction" style="margin-bottom: 10%;">
      <div class="title">
        <h1 style="font-weight: 700; text-align: center;">Top Attraction in Indonesia</h1>
      </div>
      <div class="collum" style="display: flex;">
        <div class="row" style="margin-top: 3%; flex-basis: 25%; margin-left: 1.25%; margin-right: 1.25%;">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <a href="padar" style="text-decoration: none;">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/image/ttd/island/padar.jpg"  alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/image/ttd/island/padar2.jpg" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/image/ttd/island/padar3.jpg" alt="...">
                </div>
              </div>
              <h5 style="color: black; margin-top: 3%;">1. Padar Island</h5>
              <img src="/image/ttd/Rating Star PNG/4.5star.png" alt="" style="width: 120px; height: 30px; margin-top: -1%; margin-bottom: 3%;">
              <h6 style="color: black; font-weight: 400;">Nusa Tenggara Timur, Indonesia</h6>
            </a>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true" style="height: 35px; width: 35px;"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true" style="height: 35px; width: 35px;"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>

        <div class="row" style="margin-top: 3%; flex-basis: 25%; margin-left: 1.25%; margin-right: 1.25%;">
          <div id="carouselExampleControls2" class="carousel slide" data-bs-ride="carousel">
            <a href="padar" style="text-decoration: none;">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/image/ttd/island/padar.jpg"  alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/image/ttd/island/padar2.jpg" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/image/ttd/island/padar3.jpg" alt="...">
                </div>
              </div>
              <h5 style="color: black; margin-top: 3%;">1. Yogyakarta</h5>
              <h6 style="color: black; font-weight: 400;">DI Yogyakarta, Indonesia</h6>
            </a>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls2" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true" style="height: 35px; width: 35px;"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls2" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true" style="height: 35px; width: 35px;"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    

    <%- include('../layout/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>